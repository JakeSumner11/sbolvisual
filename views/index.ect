<% extend 'layout' %>
<link rel="stylesheet" href="https://edinburgh-genome-foundry.github.io/SBOL-Visual-CSS/dist/sbol-visual-standalone.css" type="text/css">
<main>
    <div class="container">
        <div class="row stretch">
            <div class="col-md-6">
                <div>
                    <ul class="nav nav-tabs list">
                        <li class="nav-item"><a class="nav-link active" role="tab" data-toggle="tab" href="#jsonld">JSON-LD</a></li>
                        <li class="nav-item "><a class="nav-link disabled" role="tab" data-toggle="tab" href="#simplified">RDF/XML</a></li>
                        <!-- TODO: remove disable to let tab be active -->
                        <li class="nav-item "><a class="nav-link disabled" role="tab" data-toggle="tab" href="#ext">{EXT}</a></li>  <!-- TODO: remove disable to let tab be active -->
                    </ul>
                    <div class="tab-content">

                        <div class="tab-pane active" role="tabpanel" id="jsonld">

                            <form method="post" role="form" action="/">
                                <textarea class="form-control" name="sboldata" id="sboldata" rows="40" cols="1"><%= @placeholder %></textarea>
                                <input type="submit" value="submit">
                            </form>

                        </div>
                        <div class="tab-pane " role="tabpanel" id="simplified">
                            <form method="post" role="form" action="/rdfxml">
                                <textarea class="form-control " name="rdfdata" id="rdfdata" rows="40" cols="1"></textarea>
                                <input type="submit" value="submit">
                            </form>
                        </div>
                        <div class="tab-pane " role="tabpanel" id="ext"><textarea class="form-control " id="ext-textarea" rows="40" cols="1"></textarea></div>


                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <ul class="nav nav-tabs list">
                        <li class="nav-item"><a class="nav-link active" role="tab" data-toggle="tab" href="#glyph">Glyph</a></li>
                        <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" href="#list">List</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" role="tabpanel" id="glyph">

                            <% if @glyphs?.length : %>
                            <% for section in @glyphs : %>
                            <div class="sbol-visual centered">
                                <% for sequence in section : %>

                                <div class="<%- sequence %>"></div>
                                <%end %>
                            </div>
                            <%end %>
                            <% else : %>
                            <p>Glyph is empty</p>
                            <% end %>


                        </div>

                        <div class="tab-pane" role="tabpanel" id="list">
                            <form method="get" role="form" action="/">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                    <label class="form-check-label" for="exampleCheck1">Detailed</label>
                                </div>
                            </form>


                            <% if @list?.length : %>

                            <% for item in @list : %>
                            <div role="tablist" id="accordion-1">
                                <% for component in item : %>
                                <div class="card">
                                    <div class="card-header" role="tab">
                                        <h5 class="mb-0"><a data-toggle="collapse" aria-expanded="false" aria-controls="accordion-1 .item-1" href="#accordion-1 .item-1"></a>
                                            <%= component.idURI %>
                                        </h5>

                                        <div class="card-subtitle">
                                            <%= component.name %>
                                        </div>
                                    </div>
                                    <div class="collapse show item-1" role="tabpanel" data-parent="#accordion-1">
                                        <div class="card-body">
                                            <p class="card-text"><%- component.items %></p>

                                        </div>
                                    </div>
                                </div>
                                <%end %>
                            </div>
                            <% end %>
                            <% else : %>
                            <p>List is empty</p>

                            <% end %>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

